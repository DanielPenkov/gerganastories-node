mixin nav()
    script(src="/static/js/nav.js")
    nav.nav
        ul.list.list-horizontal
            li.list-item
                a.nav-btn(href="/")
                    | Home
            li.list-item.dropdown
                a.nav-btn.dropdown-toggle#nav-btn-toggle-items(href="#")
                    | Sessions
                ul.dropdown-list.list
                    li.list-item
                        a.nav-btn#nav-btn-item-all(href="/sessions")
                            | All sessions
                    li.list-item
                        a.nav-btn#nav-btn-item-add(href="/sessions/form")
                            | Add session        
